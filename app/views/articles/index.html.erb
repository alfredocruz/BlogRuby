				<% if params[:search].blank? %>
				<h4 class="fondos_h left-align" >Lo último</h4>
				<%else%>
				<h4 class="fondos_h left-align" >Mostrando <%= @articles.count %> resultados para: "<%= params[:search] %>"</h4>
				<%end%>
				<div class="infinite-table">	
					<%= render @articles %>
				</div>
				<div class="col-xs-12 border-top pag">
					<%= link_to_next_page(@articles,'Cargar Mas',:remote=>true,:class=>'btn waves-effect waves-yellow green accent-3s') %>
				</div>
			</div>
		</div>
	</div>
	<!-- Articles de categorias -->
	<% if params[:search].blank? %>
		<% @category_where.each do |tag| %>
			<%unless tag.name=="lifestyle" or tag.name=="productividad" %>
				<div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
					<div class="row white">
						<div class="col-xs center cero-padding z-depth-2 ">
							<h4 class="fondos_h left-align" >Categoria: <span><%=tag.name%></span><%=link_to tag, :class=>"right" do%><i data-tooltip="Más" data-delay="50" data-position="left" class="fa fa-arrow-circle-right tooltipped"></i><%end%></h4>
							<div>	
								<% tag.articles.limit(6).each do |article| %>
									<%=render partial: "article" , locals: { article: article } %>
								<% end %>
							</div>
						</div>
					</div>
				</div>
			<%end%>
