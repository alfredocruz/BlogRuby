<div class="cuadro-1 hoverable">

	<div class="row cero-margin">
		<div class="col-xs-6 left-align">
			<%if can? :update, @article%>
				<%= link_to edit_article_path(article) do%>
					<i class="fa fa-pencil-square-o"></i>
				<%end%>
			<%end%>
		</div>
		<div class="col-xs-6 right-align">
			<%if can? :destroy, @article%>
				<%= link_to article, method: :delete, data: { confirm: 'Are you sure?'} do%>
					<i class="fa fa-trash-o"></i>
				<%end%>
			<%end%>
		</div>
	</div>
	<div class="card">
		
				<% article.tags.each do |tag| %>
					<% if tag.name == "juegos" %>
						<% decoration_color="green darken-2" %>
						<div class="text-decoration <%= decoration_color%>">
							<span><i class="fa fa-gamepad" aria-hidden="true"></i></span>
						</div>
					<%elsif tag.name == "comunicacion"%>
						<% decoration_color="teal darken-2" %>
						<div class="text-decoration <%= decoration_color%>">
							<span>comunicacion</span>
						</div>
					<%elsif tag.name == "productividad"%>
						<% decoration_color="blue-grey darken-3" %>
						<div class="text-decoration <%= decoration_color%>">
							<span>productividad</span>
						</div>
					<%elsif tag.name == "herramientas"%>
						<% decoration_color="cyan darken-2" %>
						<div class="text-decoration <%= decoration_color%>">
							<span>herramientas</span>
						</div>
					<%elsif tag.name == "multimedia"%>
						<% decoration_color="blue darken-2" %>
						<div class="text-decoration <%= decoration_color%>">
							<span>multimedia</span>
						</div>
					<%elsif tag.name == "lifestyle"%>
						<% decoration_color="deep-orange darken-4" %>
						<div class="text-decoration <%= decoration_color%>">
							<span>lifestyle</span>
						</div>
					<%end%>
				<%end%>
			
		
		<div class="card-image waves-effect waves-block waves-light">
			<img src="<%= article.image.url(:index_cards)%>" class="activator" alt="<%= article.title %> - V.<%= article.version %>">
		</div>
		<div class="card-content">
			<div class="card-title activator grey-text text-darken-4 titulo">
				<h2><%= link_to article.title.truncate(40), article%></h2>
				<i class="fa fa-ellipsis-v right"></i>
			</div>
			<div class="index-icon">
				<span class="left"><i class="fa fa-eye"></i><%= article.visits_count%></span>
			</div>
		</div>
		<div class="card-reveal">
			<div class="row cero-margin">
				<span class="card-title grey-text text-darken-4 left-align">
					<%= link_to article.title.truncate(34), article%>
					<i class="fa fa-times right"></i>
				</span>
			</div>
			<div class="body left-align ">

				<%= Sanitize.fragment(article.body.truncate(150), Sanitize::Config::RELAXED).html_safe%>
			</div>
		</div>
	</div>
</div>