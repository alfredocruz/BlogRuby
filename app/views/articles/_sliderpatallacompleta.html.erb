	<div class="slider">
		<ul class="slides ">
			<% @articles.each do |article|%>
				<li> 
					<img style="width: 100%; height: 100%; background-size: 100% 100%;" src="<%= article.image.url%>"> <!-- random image -->
					<div class="caption left-align">
						<h3 style="font-size:1.5em; padding-left:1em;" ><%= link_to article.title, article, :class=>"light grey-text text-lighten-3"%></h3>
					</div>
				</li>
			<%end %>
		</ul>
	</div>