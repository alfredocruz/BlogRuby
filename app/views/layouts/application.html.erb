      }(document, 'script', 'facebook-jssdk'));

      });

   </script>
    <%= yield %>
   <!-- Modal Structure -->
   <div id="modal1" class="modal">
      <div class="modal-footer">
         <a class="modal-action modal-close waves-effect waves-green btn-flat "><i class="material-icons">clear</i></a>
      </div>
      <div class="modal-content ">
         <h4>Log in</h4>
         <%= render "parciales/devise" %>
      </div>
   </div>

   <div id="modal2" class="modal ">
      <div class="modal-footer">
         <a class="modal-action modal-close waves-effect waves-green btn-flat "><i class="material-icons">clear</i></a>
      </div>
      <div class="modal-content">
         <h4>Registro</h4>
         <%= render "parciales/new" %>
      </div>
   </div>
</body>
</html>