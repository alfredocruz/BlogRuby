<!DOCTYPE html>
<html lang="es-MX">
	<head>
		<%= meta_tags %>
		<link rel="icon" type="image/png" href="https://compumexicopc.webcindario.com/images/logo.png" />
		<%= stylesheet_link_tag    'application', media: 'all'%>
		<%= javascript_include_tag 'application'%>
		<%= auto_discovery_link_tag(:rss, "https://dowloadapps.herokuapp.com/") %>
		<link rel="alternate" hreflang="es" href="https://dowloadapps.herokuapp.com/" />
	 <meta name="google-site-verification" content="GZLY42eex8ZXkKsdG8nlMJeflOHqUb3A66ylpeRCrAo" />
	 <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css">
	</head>
<body>
  <h1 class="fondos_h text-shadow oculto" >Aplicaciones para Android</h1>
	 <%= render "parciales/navegacion" %>
	 
	 <% if notice %>
		<div id="flash-message" class="flash-message green">
		  <button type="button" class="close">&times;</button>
		  <i class="fa fa-check"></i><div class="margin"><%= notice %></div>
		</div>
	 <% end %>
	 <% if alert %>
		
		<div id="flash-message" class="flash-message red">
		  <button type="button" class="close">&times;</button>
		  <i class="fa fa-exclamation"></i>
		  <div class="margin"><%= alert %></div>
		</div>
	 <% end %>

	<div class="fixed-action-btn right-align" style="bottom: 76.5%; right: 0px;">
		<%if can? :new, @article%>
			<%= link_to new_article_path, :class =>"btn-floating btn-large red" do%>
				<i class="fa fa-plus"></i>
			<%end%>
		<%end%>
	</div>
  
 <!--facebook-->
	 <div id="fb-root"></div>

		 <%= analytics_init if GoogleAnalytics.valid_tracker? %>
	 <%= yield %>
	<!-- Modal Structure  de ingresar-->
	<div id="modal1" class="modal">
		<div class="modal-footer">
			<a class="modal-action modal-close waves-circle waves-effect waves-green btn-flat "><i class="fa fa-times"></i></a>
		</div>
		<div class="modal-content ">
			<h4>Log in</h4>
			<%= render "parciales/devise" %>
		</div>
	</div>
  <!-- ventana flotante de registrarse -->
	<div id="modal2" class="modal ">
		<div class="modal-footer">
			<a class="modal-action modal-close waves-effect waves-green btn-flat "><i class="fa fa-times"></i></a>
		</div>
		<div class="modal-content">
			<h4>Registro</h4>
			<%= render "parciales/new" %>
		</div>
	</div>
	<!-- ventana flotante de registrarse -->
	<div id="modal3" class="modal width-full">
		<div class="modal-footer">
			<a class="modal-action modal-close waves-effect waves-green btn-flat "><i class="fa fa-times"></i></a>
		</div>
		<div class="modal-content">
			<div class="row">
			    <div class="col-xs">
			      <ul class="tabs">
			        <li class="tab col-xs-6 active"><a class="active teal-text" href="#test1">Iniciar Sesión</a></li>
			        <li class="tab col-xs-6"><a class="teal-text" href="#test2">Registro</a></li>
			      </ul>
			    </div>
			    <div id="test1" class="col-xs-12">
			    	<h5>Iniciar Sesión</h5>
					<%= render "parciales/devise" %>
			    </div>
			    <div id="test2" class="col-xs-12">
					<h5>Registro</h5>
					<%= render "parciales/new" %>
			    </div>
	  		</div>
		</div>
	</div>
</body>
</html>