<header class="navbar-fixed">
	<nav>
		<div class="nav-wrapper">
			<ul class="right hide-on-med-and-down">
				<% if user_signed_in?%>
					<li class="li-nav"><%= link_to edit_user_registration_path do%>
						<i class="fa fa-pencil ico-nav"></i>
						<span class="font-nav">Editar Perfil</span><%end%>
					</li>
					<li class="li-nav"><%= link_to destroy_user_session_path, method: :delete do%>
						<i class="fa fa-sign-out ico-nav"></i>
						<span class="font-nav">Salir</span><%end%>
					</li>
				<%else%>
					<li class="li-nav" data-target="modal1">
						<a class="modal-trigger" data-target="modal1">
							<i class="fa fa-sign-in ico-nav"></i>
							<span class="font-nav">Ingresar</span>
						</a>
					</li>
					<li class="li-nav" data-target="modal2">
						<a class="modal-trigger" data-target="modal2">
							<i class="fa fa-user-plus ico-nav"></i>
							<span class="font-nav">Crear cuenta</span>
						</a>
					</li>
				<%end%>
				<li class="li-nav toggle">
					<a class="arriva">
						<i class="fa fa-tags ico-nav"></i>
						<span class="font-nav">Categorias</span>
						<i class="fa fa-sort-desc right fa-lg"></i>
					</a>
					
				</li>
				<% if user_signed_in?%>
					<li class="li-nav"><i class="fa fa-user ico-nav"></i><span class="font-nav "><%= current_user.username%></span></li>
				<%else%>
					<li class="li-nav"><i class="fa fa-user-times ico-nav"></i></li>
				<%end%>
			</ul>
			<ul class="right">
				<li class="transparent">
					<%= form_tag articles_path, :method => 'get' do %>
						<%= search_field_tag :search, params[:search]%>
					<%end%>
				</li>
			</ul>
			
			<div class="relative">
				<%= link_to root_path,:class=>'brand-logo' do%>
				<div class="absolute" style="height:64px;">
					<img src="https://res.cloudinary.com/alfredhdz/image/upload/v1452741743/logo_tgkmjf.png" alt="logo">
				</div>
				<div class="relative hide-on-small-only">
					<em>DownloadApps</em>
				</div>
				<%end%>
			</div>

			<a data-activates="slide-out" class="button-collapse"><i class="fa fa-align-justify" data-activates="slide-out" ></i></a>
			<ul id="slide-out" class="side-nav">
				<li>
					<%= link_to root_path,:style=>"padding-bottom:5em" do%>
						<img src="http://res.cloudinary.com/alfredhdz/image/upload/v1452741743/logo_tgkmjf.png" alt="logo">
					<%end%>

				</li>

				<%if user_signed_in?%>
					<div class="col s12 m8 offset-m2 l6 offset-l3">
				        <div class="card-panel grey lighten-5 z-depth-1 cero-padding" style="padding: 2px; box-shadow: 0px 0px; margin:0px; line-height: 20px;">
				        	<div class="row valign-wrapper cero-margin">
					            <div class="col s4">
					            	
					            </div>
					            <div class="col s12" style="line-height: 20px;">
					              	<span class="font-nav black-text"><%= current_user.username%></span>
					            </div>
					            <div class="col s12" style="line-height: 20px;">
					              	<span class="font-nav black-text"><%= current_user.email%></span>
					            </div>
				          	</div>
				        </div>
				    </div>
				<%end%>
				
				<% unless  category_where.nil? %>
					<% category_where.each do |tag| %>
						<%if tag.name=="juegos"%>
						<% hover="juegos" %>
						<% @back_color_tag ="green darken-2" %>
						<% icon_tag= "fa fa-gamepad" %>

						<%elsif tag.name=="comunicacion"%>
							<% hover="comunicacion" %>
							<% @back_color_tag ="teal darken-2" %>
							<% icon_tag= "fa fa-mobile" %>

						<%elsif tag.name=="multimedia"%>
							<% hover="multimedia" %>
							<% @back_color_tag ="blue darken-2" %>
							<% icon_tag= "fa fa-film" %>

						<%elsif tag.name=="herramientas"%>
							<% hover="herramientas" %>
							<% @back_color_tag ="cyan darken-2" %>
							<% icon_tag= "fa fa-cog" %>

						<%elsif tag.name=="lifestyle"%>
							<% hover="lifestyle" %>
							<% @back_color_tag =" deep-orange darken-4" %>
							<% icon_tag= "fa fa-odnoklassniki" %>

						<%elsif tag.name=="productividad"%>
							<% hover="productividad" %>
							<% @back_color_tag ="blue-grey darken-3" %>
							<% icon_tag= "fa fa-line-chart" %>
						<%end%>
						<li  class=" collection-tags-nav cero-padding <%= hover %>">
							<%= link_to tag, :class=>"cero-padding" do%>
								<i class="<%= icon_tag %> <%= @back_color_tag %> ico-nav grey-text text-lighten-5"></i>
								<span class="font-nav"><%= tag.name %></span>
								<i class="icon-nav fa fa-angle-right" aria-hidden="true"></i>
							<%end%>
						</li>
					<% end %>
				<%end%>

				<% if user_signed_in?%>
					<li>
						<%= link_to edit_user_registration_path do%>
							<i class="fa fa-pencil ico-nav"></i>
							<span class="font-nav">Editar Perfil</span>
						<%end%>
					</li>
					<li>
						<%= link_to destroy_user_session_path, method: :delete do%>
							<i class="fa fa-sign-out ico-nav"></i>
							<span class="font-nav">Salir</span>
						<%end%>
					</li>
				<%elsif%>
					<li>
		              <%= link_to new_user_session_path do%>
		                  <i class="fa fa-sign-in ico-nav" aria-hidden="true"></i>
		                  <span class="font-nav">Ingresar</span>
		              <%end%>
		            </li>
		            <li>
		               <%= link_to new_user_registration_path do%>
		                  <i class="fa fa-user-plus ico-nav" aria-hidden="true"></i>
		                  <span class="font-nav">Crear cuenta</span>
		               <%end%>
		            </li>
				<% end -%>

			</ul>
		</div>
	</nav>
</header>