<% require 'devise/version' %>
<p><%= t(:recipient => @resource.email, :default => "Hola #{@resource.email}!") %></p>

<p><%= t(:default => "Someone has requested a link to change your password, and you can do this through the link below.") %></p>

<p><%= link_to t(:default => "Change my password"), edit_password_url(@resource, :reset_password_token => (Devise::VERSION.start_with?('3.') ? @token : @resource.reset_password_token)) %></p>

<p><%= t(:default => "If you didn't request this, please ignore this email.") %></p>
<p><%= t(:default => "Your password won't change until you access the link above and create a new one.") %></p>
