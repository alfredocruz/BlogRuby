<% require 'devise/version' %>
<p><%= t(:recipient => @resource.email, :default => "Hola #{@resource.email}!") %></p>

<p><%= t(:default => "You can confirm your account email through the link below:") %></p>
<p><%= link_to t( :default => "Confirm my account"),
         confirmation_url(@resource, :confirmation_token => (Devise::VERSION.start_with?('3.') ? @token : @resource.confirmation_token)) %></p>