<div class="row center-xs">
	<h5>Mostrando todos los usuarios.</h5>
	<div class="col-xs-11">
		<div class="row">
			<% @users.each do |user| %>
			    <ul class="collection col-xs-12 col-sm-6 col-md-6 col-lg-6 cero-padding cero-margin">
				    <li style="max-width: 100% !important;" class="collection-item avatar col-xs-12">
				    	<div id="image_avatar" class="circle">
				    		<img src="">
				    	</div>
				    	<div class="row cero-margin">
				      	<span class="title col-xs-12">Name: <%= user.username %></span>
				      	<span class="title col-xs-12">Email: <%= user.email %></span>
				      	<span class="title col-xs-12">Rol: <%= user.role %></span>
				      	</div>
				      	<%= link_to edit_user_path(user), :class=>"secondary-content" do%>
				      		<i class="fa fa-pencil-square-o"></i>
				      	<%end%>
				 
				    </li>
				</ul>
			<% end %>
		</div>
	</div>
</div>